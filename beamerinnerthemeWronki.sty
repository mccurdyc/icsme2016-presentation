% Title page
\defbeamertemplate*{title page}{Wronki}[1][]
{%
    \begin{center}
        \textcolor{kan-text}{
            \Huge{\inserttitle}\\
            \Large{\insertsubtitle}\\
            \vspace*{1em}
            \begin{center}
            \includegraphics[scale=0.2]{images/v3-logo-circ.png}
            \end{center}
            \vspace*{2em}
            \large{\insertauthor}\\
            \vspace*{1em}\normalsize{\insertdate}\\
            \ifx\insertdate\@empty%
            \else%
                \vspace*{1em}
                {\usebeamerfont{date}\textcolor{kan-light-background}{\insertdate}}
            \fi%
        }
    \end{center}
}

